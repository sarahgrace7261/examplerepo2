using System;

namespace HelloWorld
{
    class Program
    {
        static void Main(string[] args)
        {
            int number = GetNumber();
            while(number != -1) {
                Console.WriteLine("In the loop");
                number = GetNumber();
            }
            
        }
        static int GetNumber() {
            Console.Writeline("Please enter a number");

            return int.Parse(Console.ReadLine());
        }
    }
}
